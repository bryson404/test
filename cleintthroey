function findAndOpenModem()
    local sides = {"top", "bottom", "left", "right", "front", "back"}
    
    for _, side in ipairs(sides) do
        if peripheral.getType(side) == "modem" then
            MODEM_SIDE = side
            rednet.open(side)
            print("Opened modem on " .. side)
            return true
        end
    end
    -- ...
end
